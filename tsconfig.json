{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "strict": true,
        "allowJs": false,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": true
    }
}
